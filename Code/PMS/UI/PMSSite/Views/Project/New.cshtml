@model ProjectModel
@{
    ViewBag.Title = "All";
    ViewBag.PageTitle = "添加新项目";


    Layout = "~/Views/Shared/_ContentLayout.cshtml";
}
@section styles{
    @Styles.Render("~/Content/css/jqueryui")
}
<form class="form-horizontal" method="post" action="@Url.Action("new")">
		<div class="control-group">
			<label class="control-label" for="form-field-1">项目名称</label>
			<div class="controls">
				<input type="text" id="txtName" placeholder="项目名称" name="Name" value="@Model.Name">
			</div>
		</div>

		<div class="control-group">
			<label class="control-label" for="form-field-2">开始时间</label>
			<div class="controls">
				<input id="dateStart" type="text" name="StartDate" value="@Model.StartDate.ToStandardDateString()" />
				<span class="help-inline">项目预计开始时间</span>
			</div>
		</div>

	    <br />

		<div class="form-actions">
			<button class="btn btn-info" type="submit"><i class="icon-ok"></i>提交</button>
			&nbsp; &nbsp; &nbsp;
			
		</div>
	
	    
	 </form>

@section scripts{
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("/Scripts/project.new.js")
    
}