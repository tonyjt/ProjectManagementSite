<div class="container-fluid" id="main-container" style="margin-top: 45px;">
    <a href="#" id="menu-toggler"><span></span></a>
    <!-- menu toggler -->

    <div id="sidebar">

        <div id="sidebar-shortcuts">
            <div id="sidebar-shortcuts-large">
                <button class="btn btn-small btn-success"><i class="icon-signal"></i></button>
                <button class="btn btn-small btn-info"><i class="icon-pencil"></i></button>
                <button class="btn btn-small btn-warning"><i class="icon-group"></i></button>
                <button class="btn btn-small btn-danger"><i class="icon-cogs"></i></button>
            </div>
            <div id="sidebar-shortcuts-mini">
                <span class="btn btn-success"></span>
                <span class="btn btn-info"></span>
                <span class="btn btn-warning"></span>
                <span class="btn btn-danger"></span>
            </div>
        </div>
        <!-- #sidebar-shortcuts -->

        <ul class="nav nav-list">
            @if (project != null)
            {
                <li class="@(inPMPage ? "" : "active")">
                    <a href="#" class="dropdown-toggle">
                        <i class="icon-dashboard"></i>
                        <span>@project.Name</span>
                        <b class="arrow icon-angle-down"></b>
                    </a>
                    <ul class="submenu">
                        <li><a href="@Url.Action("index", "version", new {project=project.Name})"><i class="icon-double-angle-right"></i>版本</a></li>
                        <li><a href="@Url.Action("index", "requirement", new {project=project.Name})"><i class="icon-double-angle-right"></i>需求</a></li>
                        <li><a href="@Url.Action("index", "task", new {project=project.Name})"><i class="icon-double-angle-right"></i>任务</a></li>
                        <li><a href="@Url.Action("index", "plan", new {project=project.Name})"><i class="icon-double-angle-right"></i>计划</a></li>
                    </ul>
                </li>
            }
            <li>
                <hr />
            </li>
            <li>
                <a href="#" class="dropdown-toggle">
                    <i class="icon-list-alt"></i>
                    <span>@(project != null ? "其它项目" : "所有项目")</span>
                    <b class="arrow icon-angle-down"></b>
                </a>
                <ul class="submenu">
                    @if(projectLists.Count()>0){
                        
                        foreach (Project p in projectLists)
                        {
                        <li><a href="@Url.Action("index", "home", new { project = p.Name })"><i class="icon-double-angle-right"></i>@p.Name</a></li>
                        }
                    }
                    else{
                        <li>暂无其他项目</li>
                    }
                </ul>
            </li>


            <li class="@(!inPMPage ? "" : "active")">
                <a href="#" class="dropdown-toggle">
                    <i class="icon-edit"></i>
                    <span>项目管理</span>
                    <b class="arrow icon-angle-down"></b>
                </a>
                <ul class="submenu">
                    <li><a href="@Url.Action("index", "project")"><i class="icon-double-angle-right"></i>项目列表</a></li>
                    <li><a href="@Url.Action("new", "project")"><i class="icon-double-angle-right"></i>添加项目</a></li>
                </ul>
            </li>


        </ul>
        <!--/.nav-list-->

        <div id="sidebar-collapse"><i class="icon-double-angle-left"></i></div>


    </div>
    <!--/#sidebar-->



    @RenderBody()


</div>
